pipeline {
    agent any

    tools {
      
      nodejs "node-16"
    }

    stages {
         stage("Clean Workspace"){
            steps{
                cleanWs()
            }
        }
        
        stage("Checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/Himalaya7087/NodeProject.git', credentialsId:'PASS'
            }
        }
        
           stage('Installing Dependencies') {
            steps {
                dir
                

            }

            
        }
        
        stage('Build') {
            steps {
            
              
                sh "npm run build"
            }

            
        }
        

        
        stage('Docker') {
            steps {
                dir($WORKSPACE)    
                {  
              sh "docker build -t react-image ."
              
            }
            
        }
    }
}
}
